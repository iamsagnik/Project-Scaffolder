{
  "name": "folder-structure-generator",
  "displayName": "Folder Structure Generator",
  "description": "Generate folders & files from a .sgmtr structure file.",
  "version": "1.0.0",
  "publisher": "LeoConan",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Other"],

  "activationEvents": [
    "onCommand:folderStructureGenerator.generateFromSgmtr",
    "onCommand:folderStructureGenerator.previewSgmtr",
    "onLanguage:sgmtr",
    "workspaceContains:*.sgmtr"
  ],

  "contributes": {
    "languages": [
      {
        "id": "sgmtr",
        "aliases": ["SGMTR File", "sgmtr"],
        "extensions": [".sgmtr"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sgmtr",
        "scopeName": "source.sgmtr",
        "path": "./syntaxes/sgmtr.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "folderStructureGenerator.generateFromSgmtr",
        "title": "Folder Gen: Generate from .sgmtr file"
      },
      {
        "command": "folderStructureGenerator.previewSgmtr",
        "title": "Folder Gen: Preview Structure"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "folderStructureGenerator.generateFromSgmtr",
          "when": "resourceExtname == '.sgmtr'",
          "group": "navigation"
        },
        {
          "command": "folderStructureGenerator.previewSgmtr",
          "when": "resourceExtname == '.sgmtr'",
          "group": "navigation"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": ["*.sgmtr"],
        "url": "./schema/sgmtr-schema.json"
      }
    ]
  },

  "main": "./extension.js",
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {}
}