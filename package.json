{
  "name": "project-scaffolder",
  "displayName": "Project Scaffolder",
  "description": "Generate folders & files from a .sgmtr structure file and vice versa.",
  "version": "1.0.0",
  "icon": "assets/folder.png",
  "galleryBanner.Color": {
    "color" : "#1b1b40",
    "theme" : "dark"
  },
  "type": "module",
  "publisher": "sagnikMitra12",

  "keywords": [
  "template",
  "scaffold",
  "folder generator",
  "project structure",
  "workspace templates",
  "react",
  "generator",
  "dsl"
  ],
  "categories": [
    "Other", 
    "Programming Languages", 
    "Snippets", 
    "Linters"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onCommand:folderStructureGenerator.generateFromSgmtr",
    "onCommand:folderStructureGenerator.previewSgmtr",
    "onLanguage:sgmtr",
    "workspaceContains:*.sgmtr",
    "onCommand:folderStructureGenerator.generateFromWorkspaceTemplate"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sgmtr",
        "aliases": [
          "SGMTR File",
          "sgmtr"
        ],
        "extensions": [
          ".sgmtr"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sgmtr",
        "scopeName": "source.sgmtr",
        "path": "./syntaxes/sgmtr.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "folderStructureGenerator.generateFromSgmtr",
        "title": "Generate from .sgmtr file"
      },
      {
        "command": "folderStructureGenerator.previewSgmtr",
        "title": "Preview Structure"
      },
      {
        "command": "folderGen.reverseGenerate",
        "title": "Create .sgmtr from Folder"
      },
      {
        "command": "folderStructureGenerator.generateFromWorkspaceTemplate",
        "title": "Generate From Workspace Template"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "folderStructureGenerator.generateFromSgmtr",
          "when": "resourceExtname == '.sgmtr'",
          "group": "navigation"
        },
        {
          "command": "folderStructureGenerator.previewSgmtr",
          "when": "resourceExtname == '.sgmtr'",
          "group": "navigation"
        },
        {
          "command": "folderGen.reverseGenerate",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        },
        {
          "command": "folderStructureGenerator.generateFromWorkspaceTemplate",
          "when": "explorerResourceIsFolder",
          "group": "navigation" 
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": [
          "*.sgmtr"
        ],
        "url": "./schema/sgmtr-schema.json"
      }
    ]
  },
  "main": "./extension.js",
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "minimatch": "^10.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamsagnik/Folder_Structure_generator.git"
  }
}
