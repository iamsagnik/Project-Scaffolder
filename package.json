{
  "name": "project-scaffolder",
  "displayName": "Project Scaffolder",
  "description": "Generate folders & files from a .sgmtr structure file and vice versa.",
  "version": "1.1.2",
  "icon": "assets/folder.png",
  "galleryBanner.Color": {
    "color": "#1b1b40",
    "theme": "dark"
  },
  "publisher": "sagnikMitra12",
  "keywords": [
    "template",
    "scaffold",
    "folder generator",
    "project structure",
    "workspace templates",
    "react",
    "generator",
    "dsl",
    "boilerplate",
    "project-template",
    "code-generator"
  ],
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onCommand:sgmtr.reverseGenerate",
    "onCommand:sgmtr.preview",
    "onCommand:sgmtr.forwardGenerate",
    "onCommand:sgmtr.createFromTemplate",
    "onCommand:sgmtr.generateSgmtrIgnore",
    "onLanguage:sgmtr",
    "workspaceContains:**/*.sgmtr"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sgmtr",
        "aliases": [
          "SGMTR File",
          "sgmtr"
        ],
        "extensions": [
          ".sgmtr"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sgmtr",
        "scopeName": "source.sgmtr",
        "path": "./syntaxes/sgmtr.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "sgmtr.preview",
        "title": "SGMTR: Generate Preview"
      },
      {
        "command": "sgmtr.reverseGenerate",
        "title": "SGMTR: Create .sgmtr from Folder"
      },
      {
        "command": "sgmtr.forwardGenerate",
        "title": "SGMTR: Generate Directory"
      },
      { 
        "command": "sgmtr.createFromTemplate", 
        "title": "SGMTR: Create Project from Template" 
      },
      {
        "command": "sgmtr.generateSgmtrIgnore",
        "title": "Generate .sgmtrignore from .gitignore"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "sgmtr.preview",
          "when": "resourceExtname == '.sgmtr'",
          "group": "navigation"
        },
        {
          "command": "sgmtr.reverseGenerate",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        },
        {
          "command": "sgmtr.forwardGenerate",
          "when": "resourceExtname == '.sgmtr'",
          "group": "navigation"
        },
        {
          "command": "sgmtr.createFromTemplate",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        },
        {
          "command": "sgmtr.generateSgmtrIgnore",
          "when": "resourceFilename == .gitignore",
          "group": "navigation"
        }
      ]
    }
  },
  "main": "./extension.js",
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "ajv": "^8.17.1",
    "minimatch": "^10.1.1",
    "python-parser": "^1.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamsagnik/project-scaffolder.git"
  },
  "homepage": "https://github.com/iamsagnik/project-scaffolder",
  "bugs": {
    "url": "https://github.com/iamsagnik/project-scaffolder/issues"
  }
}
