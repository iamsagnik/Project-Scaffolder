{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SGMTR File Reverse Schema",
  "description": "Schema for project structure metadata generated by SGMTR reverse generation",
  "type": "object",

  "definitions": {
    "fileMeta": {
      "type": "object",
      "required": ["lang", "size", "mtime", "imports", "exports"],
      "properties": {
        "lang": {
          "type": "string",
          "description": "Detected programming language"
        },
        "size": {
          "type": "integer",
          "minimum": 0,
          "description": "File size in bytes"
        },
        "mtime": {
          "type": "integer",
          "description": "Last modified time (epoch ms)"
        },
        "imports": {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "from": { "type": "string" },
                  "type": { "type": "string" }
                },
                "required": ["name"],
                "additionalProperties": false
              }
            ]
          }
        },
        "exports": {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "type": { "type": "string" }
                },
                "required": ["name"],
                "additionalProperties": false
              }
            ]
          }
        }
      },
      "additionalProperties": false
    },

    "fileNode": {
      "type": "object",
      "required": ["$meta"],
      "properties": {
        "$meta": { "$ref": "#/definitions/fileMeta" }
      },
      "additionalProperties": false
    },

    "folderNode": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          { "$ref": "#/definitions/fileNode" },
          { "$ref": "#/definitions/folderNode" }
        ]
      }
    }
  },

  "additionalProperties": {
    "oneOf": [
      { "$ref": "#/definitions/fileNode" },
      { "$ref": "#/definitions/folderNode" }
    ]
  }
}
