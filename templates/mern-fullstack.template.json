{
  "templateMeta": {
    "id": "mern-fullstack-enterprise",
    "name": "MERN Full-Stack App (Enterprise)",
    "description": "Enterprise MERN application with MVC backend, modular React frontend, Docker, CI, testing, environment separation, and scalable architecture.",
    "defaultProjectName": "mern-enterprise-app",
    "category": "fullstack",
    "author": "Mitra",
    "tags": ["mern", "mongo", "express", "react", "node", "docker", "ci", "enterprise"]
  },

  "forwardTree": {
    "README.md": {
      "$meta": {
        "generator": "doc.readme.mern",
        "variant": "enterprise",
        "overwrite": true,
        "encoding": "utf8"
      }
    },

    ".gitignore": {
      "$meta": {
        "generator": "git.ignore.mern",
        "overwrite": true,
        "encoding": "utf8"
      }
    },

    ".env": null,

    ".env.example": {
      "$meta": {
        "generator": "mern.env.example",
        "variant": "root",
        "overwrite": true,
        "encoding": "utf8"
      }
    },

    "docker-compose.yml": {
      "$meta": {
        "generator": "docker.compose.mern",
        "variant": "mongo-backend-frontend",
        "overwrite": true,
        "encoding": "utf8"
      }
    },

    ".github": {
      "workflows": {
        "ci.yml": {
          "$meta": {
            "generator": "ci.github.mern",
            "variant": "backend-frontend-docker",
            "overwrite": true,
            "encoding": "utf8"
          }
        }
      },
      "ISSUE_TEMPLATE": {},
      "PULL_REQUEST_TEMPLATE.md": null
    },

    "backend": {
      "package.json": {
        "$meta": {
          "generator": "node.package.mern-backend",
          "variant": "express-mongo",
          "overwrite": true,
          "encoding": "utf8"
        }
      },

      ".env": null,

      ".env.example": {
        "$meta": {
          "generator": "node.env.example",
          "variant": "express-mongo"
        }
      },

      ".gitignore": {
        "$meta": {
          "generator": "git.ignore.node",
          "overwrite": true
        }
      },

      "jest.config.cjs": {
        "$meta": {
          "generator": "test.jest.config.node",
          "variant": "express",
          "overwrite": true
        }
      },

      "nodemon.json": {
        "$meta": {
          "generator": "node.nodemon.config",
          "overwrite": true
        }
      },

      "Dockerfile": {
        "$meta": {
          "generator": "dockerfile.node-express",
          "variant": "mern-backend",
          "overwrite": true
        }
      },

      "src": {
        "index.js": {
          "$meta": {
            "generator": "mern.backend.index",
            "variant": "bootstrap"
          }
        },
        "app.js": {
          "$meta": {
            "generator": "mern.backend.app",
            "variant": "mvc-layered"
          }
        },

        "config": {
          "env.js": {
            "$meta": {
              "generator": "mern.backend.config.env"
            }
          },
          "db.js": {
            "$meta": {
              "generator": "mern.backend.config.db",
              "variant": "mongodb"
            }
          },
          "logger.js": {
            "$meta": {
              "generator": "mern.backend.config.logger",
              "standard": "winston"
            }
          }
        },

        "routes": {
          "index.routes.js": {
            "$meta": { "generator": "mern.backend.routes" }
          },
          "auth.routes.js": {
            "$meta": { "generator": "mern.backend.routes.auth" }
          },
          "user.routes.js": {
            "$meta": { "generator": "mern.backend.routes.user" }
          },
          "todo.routes.js": {
            "$meta": { "generator": "mern.backend.routes.todo" }
          }
        },

        "controllers": {
          "health.controller.js": {
            "$meta": { "generator": "mern.backend.controllers.health" }
          },
          "auth.controller.js": {
            "$meta": { "generator": "mern.backend.controllers.auth" }
          },
          "user.controller.js": {
            "$meta": { "generator": "mern.backend.controllers.user" }
          },
          "todo.controller.js": {
            "$meta": { "generator": "mern.backend.controllers.todo" }
          }
        },

        "models": {
          "user.model.js": {
            "$meta": {
              "generator": "mern.backend.models.user",
              "variant": "mongoose"
            }
          },
          "todo.model.js": {
            "$meta": {
              "generator": "mern.backend.models.todo",
              "variant": "mongoose"
            }
          }
        },

        "services": {
          "auth.service.js": {
            "$meta": { "generator": "mern.backend.services.auth" }
          },
          "user.service.js": {
            "$meta": { "generator": "mern.backend.services.user" }
          },
          "todo.service.js": {
            "$meta": { "generator": "mern.backend.services.todo" }
          }
        },

        "middlewares": {
          "error.middleware.js": {
            "$meta": { "generator": "mern.backend.middlewares.error" }
          },
          "auth.middleware.js": {
            "$meta": {
              "generator": "mern.backend.middlewares.auth",
              "standard": "jwt"
            }
          },
          "validate.middleware.js": {
            "$meta": { "generator": "mern.backend.middlewares.validate" }
          },
          "cors.middleware.js": {
            "$meta": { "generator": "mern.backend.middlewares.cors" }
          }
        },

        "validators": {},
        "repositories": {},
        "helpers": {},

        "utils": {
          "constants.js": { "$meta": { "generator": "mern.backend.utils.constants" } },
          "response.js": { "$meta": { "generator": "mern.backend.utils.response" } },
          "logger.js": {
            "$meta": { "generator": "mern.backend.utils.logger", "standard": "winston" }
          },
          "jwt.js": { "$meta": { "generator": "mern.backend.utils.jwt" } }
        },

        "tests": {
          "setup.js": {
            "$meta": {
              "generator": "test.mern.backend.setup",
              "variant": "jest-supertest"
            }
          },

          "integration": {
            "auth.int.test.js": {
              "$meta": { "generator": "test.mern.backend.integration.auth" }
            },
            "todo.int.test.js": {
              "$meta": { "generator": "test.mern.backend.integration.todo" }
            }
          },

          "unit": {
            "user.service.test.js": {
              "$meta": { "generator": "test.mern.backend.unit.user-service" }
            }
          }
        }
      }
    },

    "frontend": {
      "package.json": {
        "$meta": {
          "generator": "node.package.mern-frontend",
          "variant": "react-vite",
          "overwrite": true
        }
      },

      "vite.config.ts": {
        "$meta": {
          "generator": "vite.config.react",
          "variant": "mern-proxy",
          "overwrite": true
        }
      },

      "tsconfig.json": {
        "$meta": {
          "generator": "typescript.config.react",
          "overwrite": true
        }
      },

      "index.html": {
        "$meta": { "generator": "vite.index.html.react" }
      },

      ".env": null,

      ".env.example": {
        "$meta": {
          "generator": "mern.env.example",
          "variant": "frontend"
        }
      },

      ".gitignore": {
        "$meta": { "generator": "git.ignore.node" }
      },

      "Dockerfile": {
        "$meta": {
          "generator": "dockerfile.react-vite",
          "variant": "nginx-prod",
          "overwrite": true
        }
      },

      "README.md": {
        "$meta": { "generator": "doc.readme.mern-frontend" }
      },

      "src": {
        "assets": {},
        "constants": {},
        "lib": {},
        "context": {},
        "styles": {},

        "main.tsx": {
          "$meta": { "generator": "mern.frontend.main" }
        },

        "App.tsx": {
          "$meta": {
            "generator": "mern.frontend.app",
            "variant": "auth-dashboard-shell"
          }
        },

        "config": {
          "env.ts": { "$meta": { "generator": "mern.frontend.config.env" } },
          "api.ts": {
            "$meta": {
              "generator": "mern.frontend.config.api",
              "variant": "backend-base-url"
            }
          }
        },

        "routes": {
          "index.tsx": {
            "$meta": {
              "generator": "react.routes.index",
              "variant": "v6"
            }
          },
          "protected.routes.tsx": {
            "$meta": { "generator": "react.routes.protected" }
          }
        },

        "pages": {
          "Home.page.tsx": { "$meta": { "generator": "mern.frontend.pages.home" } },
          "Login.page.tsx": { "$meta": { "generator": "mern.frontend.pages.login" } },
          "Register.page.tsx": { "$meta": { "generator": "mern.frontend.pages.register" } },
          "Dashboard.page.tsx": { "$meta": { "generator": "mern.frontend.pages.dashboard" } },
          "Todos.page.tsx": { "$meta": { "generator": "mern.frontend.pages.todos" } }
        },

        "components": {
          "layout": {
            "AppLayout.tsx": {
              "$meta": { "generator": "mern.frontend.components.layout.app" }
            }
          },
          "ui": {
            "Button.tsx": { "$meta": { "generator": "mern.frontend.components.ui.button" } },
            "Input.tsx": { "$meta": { "generator": "mern.frontend.components.ui.input" } }
          },
          "todos": {
            "TodoList.tsx": {
              "$meta": { "generator": "mern.frontend.components.todos.list" }
            },
            "TodoItem.tsx": {
              "$meta": { "generator": "mern.frontend.components.todos.item" }
            }
          }
        },

        "store": {
          "auth.store.ts": {
            "$meta": { "generator": "react.store.auth", "standard": "zustand" }
          },
          "todo.store.ts": {
            "$meta": { "generator": "mern.frontend.store.todo", "standard": "zustand" }
          }
        },

        "services": {
          "http.service.ts": {
            "$meta": { "generator": "mern.frontend.services.http", "standard": "axios" }
          },
          "auth.service.ts": {
            "$meta": { "generator": "mern.frontend.services.auth" }
          },
          "todo.service.ts": {
            "$meta": { "generator": "mern.frontend.services.todo" }
          }
        },

        "hooks": {
          "useAuth.ts": {
            "$meta": { "generator": "mern.frontend.hooks.use-auth" }
          },
          "useTodos.ts": {
            "$meta": { "generator": "mern.frontend.hooks.use-todos" }
          }
        },

        "utils": {
          "storage.ts": {
            "$meta": { "generator": "mern.frontend.utils.storage" }
          }
        },

        "tests": {
          "setup.ts": {
            "$meta": { "generator": "react.test.setup", "variant": "vitest" }
          },
          "pages": {
            "login.page.test.tsx": {
              "$meta": { "generator": "mern.frontend.test.page.login" }
            }
          }
        }
      }
    }
  }
}
